<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
    <!-- Define persistence unit -->
    <persistence-unit name="employee-persistence-unit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>lt.bit.java2.db.entities.Employee</class>
        <class>lt.bit.java2.db.entities.Salary</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/employees?useUnicode=yes&amp;characterEncoding=UTF-8&amp;serverTimezone=Europe/Vilnius" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="adminadmin" />

            <property name="hibernate.connection.provider_class" value="org.hibernate.hikaricp.internal.HikariCPConnectionProvider" />
<!--            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver" />-->
<!--            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/employees?useUnicode=yes&amp;characterEncoding=UTF-8&amp;serverTimezone=Europe/Vilnius" />-->
<!--            <property name="hibernate.connection.username" value="root" />-->
<!--            <property name="hibernate.connection.password" value="adminadmin" />-->

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            <property name="toplink.jdbc.url"
                      value="jdbc:mysql://localhost:3306/employees?serverTimezone=Europe/Vilnius"/>
            <property name="toplink.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.url"
                      value="jdbc:mysql://localhost:3306/employees?serverTimezone=Europe/Vilnius"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="openjpa.ConnectionURL"
                      value="jdbc:mysql://localhost:3306/employees?serverTimezone=Europe/Vilnius"/>
            <property name="openjpa.ConnectionDriverName" value="com.mysql.cj.jdbc.Driver"/>
            <property name="eclipselink.jdbc.url"
                      value="jdbc:mysql://localhost:3306/employees?serverTimezone=Europe/Vilnius"/>
            <property name="eclipselink.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
        </properties>
    </persistence-unit>
</persistence>